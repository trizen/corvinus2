#!/usr/bin/ruby

include Lingua::RO::Numbers;

var lingua = Lingua::RO::Numbers::nou(
    separator_mii: ','
);

var numar = 42

var text = lingua.in_litere(numar)
var dnum = lingua.in_cifre(text)

spune "#{text} => #{dnum}"

var t = "o mie patru sute douazeci si cinci virgula trei"
var n = lingua.in_cifre(t)
spune "#{t} => #{n}"
