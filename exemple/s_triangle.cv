#!/usr/bin/ruby

func sierpinski_triunghi(n) {
    var triunghi = ['*'];
    { |i|
        var sp = (' ' * Mate.pow(2, i-1));
        triunghi = (triunghi.map {|x| sp + x + sp} +
                    triunghi.map {|x| x + ' ' + x});
    } * n;
    triunghi.join("\n");
}
