func rangex(str) {
    str.split(',').map { |range|
        var m = range.match(/^
            (?(DEFINE) (?<int>[+-]?[0-9]+) )
            (?<from>(?&int))-(?<to>(?&int))
        $/x);
        m ? ( var ncap = m.ncap; ncap{:from}.to_i .. ncap{:to}.to_i )
          : range.to_i;
    }
}
