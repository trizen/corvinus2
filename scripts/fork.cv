#!/usr/bin/ruby

func qsort(lista) {

    daca (lungime(lista) <= 1) {
        return lista;
    }

    spune lista;
    var pivot = lista.inlatura_aleatoriu;

    var proc1 = { qsort(lista.select{ _ <= pivot}) }.bifurca;
    var proc2 = { qsort(lista.select{ _  > pivot }) }.bifurca;

    proc1.asteapta + [pivot] + proc2.asteapta;
}

spune qsort(1..50 -> amesteca);
